{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2021"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "environment.d.ts"],
  "exclude": ["node_modules", "<node_internals>/**"],
  "ts-node": {
    "files": true
  },
  "typeRoots": ["./node_modules/@types", "./src/models/types", "./node_modules/@types/mongodb"]
}
